function fbm() {
  local marks target_dir
  marks=$(showmarks) &&
  target_dir=$(echo "$marks" | fzf) &&
  target_dir=$(echo "$target_dir" | cut -f 3) &&
  cd $(eval echo "$target_dir")
}

function ftk() {
  local sessoins target_sessions
  sessions=$(tmux ls) &&
  target_sessions=$(echo "$sessions" | fzf -m) &&
  for target_session in "${target_sessions[@]}"
  do
    target_session=$(echo "$target_session" | cut -d ':' -f 1)
    tmux kill-session -t $target_session
  done
}
