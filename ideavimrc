set gdefault
set history=10000
set hlsearch
set ignorecase
set iskeyword+=-
set incsearch
set nrformats=
set scrolloff=2
set sidescrolloff=4
set smartcase
set visualbell t_vb=
set wrapscan
set clipboard+=unnamed

nnoremap ; :
nnoremap : ;

noremap <Space>; :so ~/.ideavimrc<CR>

nnoremap Y y$
noremap j gj
noremap k gk
nnoremap r gr

nnoremap x "_x

inoremap <C-b> <Left>
inoremap <C-f> <Right>

vnoremap <silent> y y`]
vnoremap <silent> p p`]
nnoremap <silent> p p`]

nnoremap <Space>t :!
nnoremap <Space>T :action ActivateTerminalToolWindow<CR>

nnoremap <silent> <c-w><CR> <c-w>j

nnoremap <silent> <c-w><C-s> <c-w>s<c-w>k
nnoremap <silent> <c-w>s <c-w>s<c-w>k
nnoremap <silent> <c-w><C-v> <c-w>v<c-w>h
nnoremap <silent> <c-w>v <c-w>v<c-w>h

nnoremap zM <Nop>
nnoremap zc <Nop> nnoremap zC <Nop>
nnoremap zR <Nop>
nnoremap zo <Nop>
nnoremap zO <Nop>

set surround
set multiple-cursors
set commentary

nnoremap crm :StringManipulation.ToPascalCaseOrCamelCase<CR><esc>
nnoremap crk :StringManipulation.ToHyphenCaseOrCamelCase<CR><esc>
nnoremap crs :StringManipulation.ToSnakeCaseOrCamelCase<CR><esc>
nnoremap cru :osmedile.intellij.stringmanip.WordsAndCamelToConstantStyleCaseAction<CR><esc>

nnoremap <C-o> :action Back<CR>
nnoremap <C-i> :action Forward<CR>
nnoremap <C-S-o> <C-o>
nnoremap <C-S-i> <C-i>

nnoremap s :action AceAction<CR>

nnoremap g; :action JumpToLastChange<CR>
nnoremap g, :action JumpToNextChange<CR>

nnoremap [m :action MethodUp<CR>
nnoremap ]m :action MethodDown<CR>

nnoremap [c :action VcsShowPrevChangeMarker<CR>
nnoremap ]c :action VcsShowNextChangeMarker<CR>

nnoremap [e :action GotoPreviousError<CR>
nnoremap ]e :action GotoNextError<CR>

nnoremap <Space>jk :action GotoDeclaration<CR>
nnoremap <Space>ji :action GotoImplementation<CR>
nnoremap <Space>js :action GotoSuperMethod<CR>
nnoremap <Space>jt :action GotoTest<CR>
nnoremap <C-k> :action ShowUsages<CR>

nnoremap =ae :action ReformatCode<CR>

nnoremap <Space>fo :action FileStructurePopup<CR>
nnoremap <Space>ff :action GotoFile<CR>
nnoremap <Space>fs :action FindInPath<CR>

nnoremap <Space>at :action ActivateTODOToolWindow<CR>

nnoremap <Space>gb :action Git.Branches<CR>

