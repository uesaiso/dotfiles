# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"
alias q="exit"

alias reload='exec $SHELL -l'
alias retmux='tmux source-file ~/.tmux.conf'
alias rc='$EDITOR ~/dotfiles'

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Anyframe
alias any="anyframe-widget-select-widget"
alias c="anyframe-widget-cd-ghq-repository"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
