# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"
alias q="exit"

alias reload='exec $SHELL -l'
alias retmux='tmux source-file ~/.tmux.conf'
alias rc='$EDITOR ~/dotfiles'
alias done='toggl-stop-todoist'

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'
alias fpath='echo $fpath | tr -s " " "\n"'

# Anyframe
alias any="anyframe-widget-select-widget"

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
